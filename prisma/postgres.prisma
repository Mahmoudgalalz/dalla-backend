generator client {
  provider = "prisma-client-js"
  output = "../node_modules/prisma/client/postgres"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DATABASE_URL")
}


model User {
  id          String      @id
  name        String
  email       String
  password    String
  gender      Gender?

  @@unique([email, id])
  @@index([email])
}

model Company {
  id          String      @id
  name        String
  email       String
  domain      String
  password    String
  gender      Gender?

  @@unique([email, id])
  @@index([email])
}


enum Gender {
  Male
  Female
}