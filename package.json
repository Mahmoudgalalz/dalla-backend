    "cookie-parser": "^1.4.7",
    "ioredis": "^5.4.1",
    "mongodb": "^6.12.0",
    "mongoose": "^8.9.0",
    "nanoid": "^5.0.9",
    "nestjs-pino": "^4.1.0",
